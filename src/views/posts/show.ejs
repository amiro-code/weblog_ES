<%- include("../partials/header", { title: (post?.title || "Post") + " — Weblog ES" }) %>

<section class="container" style="padding: 22px 0 34px;">
  <div class="formCard">
    <div class="meta">
      <span>#<%= post.id %></span>
      <% if (post.createdAt) { %> • <span><%= post.createdAt %></span> <% } %>
    </div>

    <h1 style="margin:0 0 10px;"><%= post.title %></h1>

    <div style="color: var(--muted); line-height: 1.9; white-space: pre-wrap;">
      <%= post.content %>
    </div>

    <div style="display:flex; gap:10px; margin-top:16px; flex-wrap:wrap;">
      <a class="btn" href="/">Back</a>
      <a class="btn" href="/posts/<%= post.id %>/edit">Edit</a>
      <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" style="display:inline;">
        <button class="btn danger" type="submit" onclick="return confirm('Delete this post?')">Delete</button>
      </form>
    </div>
  </div>
</section>

<%- include("../partials/footer") %>
