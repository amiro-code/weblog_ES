<%- include("../partials/header") %>

<section class="card">
  <div class="card__header">
    <h2><%= post.title %></h2>
    <div class="actions">
      <a class="btn btn--ghost" href="/posts/<%= post.id %>/edit">Edit</a>

      <form action="/posts/<%= post.id %>?_method=DELETE" method="POST" onsubmit="return confirm('Delete this post?');">
        <button class="btn btn--danger" type="submit">Delete</button>
      </form>

      <a class="link" href="/">Back</a>
    </div>
  </div>

  <p class="muted">Created: <%= new Date(Number(post.createdAt)).toLocaleString() %></p>

  <article class="content">
    <%= post.content.replace(/\n/g, "<br/>") %>
  </article>
</section>

<%- include("../partials/footer") %>
