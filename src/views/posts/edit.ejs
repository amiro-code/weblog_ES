<%- include("../partials/header") %>

<section class="card">
  <div class="card__header">
    <h2>Edit Post</h2>
    <a class="link" href="/posts/<%= post.id %>">Back</a>
  </div>

  <form class="form" action="/posts/<%= post.id %>?_method=PUT" method="POST">
    <label class="label">Title</label>
    <input class="input" name="title" value="<%= post.title %>" required />

    <label class="label">Content</label>
    <textarea class="textarea" name="content" rows="10" required><%= post.content %></textarea>

    <button class="btn" type="submit">Save Changes</button>
  </form>
</section>

<%- include("../partials/footer") %>
